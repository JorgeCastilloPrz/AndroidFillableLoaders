<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <com.github.jorgecastillo.FillableLoader
      android:id="@+id/fillableLoader"
      android:layout_width="300dp"
      android:layout_height="150dp"
      app:fl_fillColor="#4CAF50"
      app:fl_strokeColor="#ffffff"
      app:fl_strokeWidth="1dp"
      app:fl_originalWidth="1079"
      app:fl_originalHeight="540"
      app:fl_clippingTransform="plain"
      android:layout_gravity="center"
      />

</FrameLayout>